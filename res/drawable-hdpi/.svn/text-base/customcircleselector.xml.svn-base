        </item> 
        <item android:state_selected="false"> 
                <shape android:shape="rectangle"> 
                    <gradient android:startColor="#b9b9b9" 
                        android:endColor="#868686" android:angle="360" 
                    /> 
                </shape> 
        </item> 

</selector>