<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/swarm_background"
    >
    
    <include layout="@layout/swarm_header" />
    	
    <TextView
    	android:id="@+id/empty_list"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"
    	android:gravity="center"
    	android:text="@string/fri_get_friends"
    	android:textStyle="bold"
    	android:textColor="#000000"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:visibility="gone"
		style="@style/LightShadow.BlackText"
    	/>
    	
    <ListView
    	android:id="@+id/list"
    	android:layout_width="fill_parent"
    	android:layout_height="1dip"
    	android:layout_weight="1"
    	android:divider="#888888"
    	android:dividerHeight="1px"
    	android:cacheColorHint="#00000000"
    	/>
    
    <View
    	android:layout_width="fill_parent"
    	android:layout_height="1px"
    	android:background="#bdbdbd"
    	/>
    	
    <LinearLayout
    	android:id="@+id/footer"
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/footer_background"
    	android:padding="8dip"
    	>
    	<EditText
	    	android:id="@+id/add_friend_username"
	    	android:layout_width="0dip"
	    	android:layout_height="wrap_content"
	    	android:layout_weight="1"
	    	android:layout_marginRight="8dip"
	    	android:hint="@string/fri_add_a_friend"
	    	/>
	    <ImageButton
	    	android:id="@+id/add"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingTop="8dip"
	    	android:paddingBottom="8dip"
	    	android:paddingLeft="8dip"
	    	android:paddingRight="8dip"
	    	android:src="@drawable/swarm_add_friend"
	    	android:background="@drawable/footer_button_background"
	    	/>
    </LinearLayout>
    	
</LinearLayout>
