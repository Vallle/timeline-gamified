<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timeline="http://schemas.android.com/apk/res/com.bjorsond.android.timeline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="3dip"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/achievements_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/achievements_completed" />

    <com.bjorsond.android.timeline.widgets.OutlineTextView
        android:layout_weight="1"
        android:id="@+id/achievements_title"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textSize="28sp" 
        android:textColor="@color/list_labels_color"
        timeline:outlineColor="@color/list_labels_color_outline"/>

    <com.bjorsond.android.timeline.widgets.OutlineTextView
        android:id="@+id/achievements_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textSize="28sp"
        android:textColor="@color/list_labels_color"
        android:inputType="text"
        android:ellipsize="end"
        timeline:outlineColor="@color/list_labels_color_outline" />

</LinearLayout>