<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="@color/White" android:weightSum="100">



	<TableRow android:id="@+id/dash_header_row"
		android:layout_width="fill_parent" android:background="@color/Header" android:layout_weight="10" android:layout_height="0dip">
		<ImageButton android:background="@drawable/header_home_button"
			android:id="@+id/profileHeaderHomeButton"
			android:focusable="false" android:layout_height="fill_parent" android:layout_width="fill_parent"></ImageButton>
	</TableRow>


	<TableRow android:id="@+id/DashTableRow00"
		android:layout_width="fill_parent"
		android:paddingTop="1dp" android:paddingBottom="0dp" android:layout_height="0dip" android:layout_weight="0">
		
	    <LinearLayout
		    android:id="@+id/LinearLayout00"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="0"
		    android:paddingBottom="0dp"
		    android:paddingTop="0dp" >
		    
	        <TextView android:layout_height="wrap_content" android:id="@+id/pointsInProgressBar"
					android:gravity="center" android:layout_width="fill_parent"
					android:text="0/100" android:textSize="16dip" android:paddingLeft="30dip"/>
	            
	    </LinearLayout>
	    
	</TableRow>
	

	<TableRow android:id="@+id/DashTableRow01"
		android:layout_width="fill_parent"
		android:paddingTop="0dp" android:paddingBottom="5dp" android:layout_height="0dip" android:layout_weight="0">

		<LinearLayout
		    android:id="@+id/LinearLayout01"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:paddingBottom="5dp"
		    android:paddingTop="0dp" >

		    <ImageView
		        android:id="@+id/levelImageView"
		        android:layout_width="67dp"
		        android:layout_height="wrap_content"
		        android:src="@drawable/profile_level_one" />

		    <LinearLayout
		        android:layout_width="234dp"
		        android:layout_height="match_parent" >

		        <ProgressBar
		            android:id="@+id/levelProgressBar"
		            style="?android:attr/progressBarStyleHorizontal"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" />

		    </LinearLayout>

		</LinearLayout>

	</TableRow>
	<TableRow android:id="@+id/DashTableRow02"
		android:layout_width="fill_parent"
		android:paddingTop="5dip" android:paddingBottom="5dip" android:layout_height="0dip" android:layout_weight="0">
		<LinearLayout android:layout_weight="1"
			android:layout_width="fill_parent" android:id="@+id/LinearLayout01" android:layout_height="fill_parent">

			<LinearLayout
			    android:id="@+id/LinearLayout03"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="2"
			    android:paddingLeft="20dip"
			    android:paddingRight="25dip" >

			    <TextView
			        android:id="@+id/ProfileName"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:hint="@string/Profile_user_name_label"
				    android:ems="10"
			        android:textAppearance="?android:attr/textAppearanceLarge" />
			    
			</LinearLayout>

			<LinearLayout
			    android:id="@+id/LinearLayout03"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:paddingLeft="20dip"
			    android:paddingRight="20dip" >
			</LinearLayout>

		</LinearLayout>
	</TableRow>

	<TableRow android:id="@+id/DashTableRow03"
		android:layout_width="fill_parent"
		android:paddingTop="0dip" android:paddingBottom="10dip" android:layout_height="0dip" android:layout_weight="25">

		<LinearLayout
		    android:id="@+id/LinearLayout01"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_weight="1" >

			<LinearLayout
			    android:id="@+id/LinearLayout03"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:layout_weight="0.37"
			    android:paddingLeft="50dip" >

				<ImageView
				    android:id="@+id/profilePicture"
				    android:layout_width="200dip"
				    android:layout_height="300dip"
				    android:layout_weight="0"
				    android:background="@drawable/profile_picture_background"
				    android:src="@drawable/profile_default_picture" />

			</LinearLayout>

		</LinearLayout>

	</TableRow>
	<TableRow android:id="@+id/DashTableRow04" android:layout_height="0dip" android:layout_weight="5" android:layout_width="fill_parent" android:gravity="center_horizontal">
		<LinearLayout
		    android:id="@+id/LinearLayout04"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:paddingLeft="20dip"
		    android:paddingRight="10dip" >
			
		    <LinearLayout
			    android:id="@+id/LinearLayout04"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:paddingLeft="20dip"
			    android:paddingRight="0dip"
	    		android:orientation="vertical" >

		        <TextView
		            android:id="@+id/ProfileAchievementCountText"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:text="@string/Profile_achievement_count_label"
		            android:textSize="16dip" />

			</LinearLayout>
			
		    <LinearLayout
			    android:id="@+id/LinearLayout04"
			    android:layout_width="wrap_content"
			    android:layout_height="fill_parent"
			    android:paddingLeft="0dip"
			    android:paddingRight="0dip"
	    		android:orientation="vertical" >
		    
				<TextView android:layout_height="wrap_content" android:id="@+id/ProfileAchievementCountNumber"
					android:gravity="left" android:layout_width="wrap_content"
					android:hint="0" android:textSize="16dip" android:paddingLeft="3dip"></TextView>
			</LinearLayout>
		</LinearLayout>
	</TableRow>

	

</TableLayout>
