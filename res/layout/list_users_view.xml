<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="?android:attr/listPreferredItemHeight" 
  android:layout_width="fill_parent"
  android:padding="6dip" android:background="@color/White">
  
      <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"

        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"

        android:src="@drawable/icon" android:id="@+id/userlisticon" android:layout_centerVertical="true"/>

    <TextView
       	android:id="@+id/userlist_text"
   		android:paddingLeft="6dip"
		android:layout_toRightOf="@+id/userlisticon" android:layout_width="wrap_content" android:text="Test" android:textSize="16dip" android:width="200dip" android:textColor="@color/Black" android:hapticFeedbackEnabled="true" android:gravity="center_vertical" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
		
    <CheckBox android:layout_height="wrap_content" android:id="@+id/user_list_checkbox" android:layout_width="wrap_content" android:layout_alignParentRight="true" style="@style/SmallCheckBox"></CheckBox>
		
  </RelativeLayout>
